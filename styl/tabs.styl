.tabs {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  display: -webkit-flex;
  display: flex;

  list-style-type: none;
  margin: 0 0 (copy-line-height/2);
  padding: (copy-line-height/2) (copy-line-height/2) 0;
  width: 100%;

  background: linear-gradient(to top, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0) 25%);
  box-shadow: 0 1px 1px rgba(255, 255, 255, 0.1);
}

.tabs > .tab {
  -webkit-flex: 1;
  flex: 1;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  padding: (copy-line-height/4) 0 (copy-line-height/6);

  cursor: pointer;

  text-align: center;
  line-height: copy-line-height;
  text-shadow: 0 -1px 1px #1b1b1b;
  color: #5e5e5e;
  font-weight: 500;
}

.tab:hover {
  color: rgba(255,255,255,0.75);
}

.tab.selected {
  background-color: #303030;
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0) 100%);
  box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.1);
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: -2px;
}
