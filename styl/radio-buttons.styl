.radio-buttons {
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;

  display: -webkit-flex;
  display: flex;

  list-style-type: none;
  margin: (copy-line-height/2);
  padding: 0;

  border-radius: 4px;
  // border: 1px solid white;

  cursor: pointer;
}

.radio-button {
  -webkit-flex: 1;
  flex: 1;
  text-align: center;
  padding: (small-line-height/4) 0 (small-line-height/6);
  background-color: #303030;
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0) 100%);
  box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.1), 0 1px 2px rgba(0, 0, 0, 0.2);
  line-height: small-line-height;
  text-shadow: 0 -1px 1px #1b1b1b;
  color: #5e5e5e;
  font-size: small-font-size;
}

.radio-button:first-child {
  border-top-left-radius: 4px;
  border-bottom-left-radius: 4px;
}

.radio-button:last-child {
  border-top-right-radius: 4px;
  border-bottom-right-radius: 4px;
}

.radio-button.selected {
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.0) 100%);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.25), 0 1px 1px rgba(255, 255, 255, 0.05);
  // box-shadow: inset 0 -1px 1px rgba(255, 255, 255, 0.05);
  color: rgba(255, 255, 255, 0.8);
}

.radio-button > input {
  height: 0;
  width: 0;
  visibility: hidden;
}
