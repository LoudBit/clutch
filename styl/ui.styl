#ui {
  background: rgba(0,0,0,0.50);
  padding: 16px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;

  ul.tabs {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      color: rgba(255,255,255,0.5);
      cursor: pointer;
    }

    li:hover {
      color: rgba(255,255,255,0.75);
    }

    li.selected { color: white; }

  }

}

#anchor {
  box-sizing: border-box;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height*4;
  position: absolute;
}
