[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}

#clutch {
  height: 100%;
  width: 100%;
  position: absolute
}

#ui {
  background: #303030;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 256px;
  overflow-y: scroll;

  a {
    color: #e2e2e2;
    text-decoration: none;
    border-bottom: 1px solid #ccc;
  }

  a:hover {
    color: #fff;
    border-bottom: 1px solid #fff;
  }

  #ui footer h1 {
    text-shadow: 0 1px 2px rgba(0,0,0,0.5);
  }

}

#palette {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 256px;
}

.color {
  box-sizing: border-box;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height*4;
  position: absolute;
}

#spectrum {
  width: 100%;
  height: 100%;
}

#spectrum .color {
  webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -webkit-flex-basis: 0;
  -ms-flex-preferred-size: 0;
  flex-basis: 0;
}

