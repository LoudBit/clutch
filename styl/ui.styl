#clutch {
  height: 100%;
  width: 100%;
  position: absolute
}

#ui {
  background: #303030;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 256px;
  overflow-y: scroll;
}

#palette {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 256px;
}

#anchor {
  box-sizing: border-box;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height*4;
  position: absolute;
}

#spectrum {
  width: 100%;
  height: 100%;
}

#spectrum .spec {
  box-sizing: border-box;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height*4;
  position: absolute;

  webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -webkit-flex-basis: 0;
  -ms-flex-preferred-size: 0;
  flex-basis: 0;
}

#ui footer h1 {
  text-shadow: 0 1px 2px rgba(0,0,0,0.5);
}
