#ui {
  background: rgba(0,0,0,0.8);
  padding: 16px;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  width: 256px;

  ul.tabs {
    list-style: none;
    margin: 0;
    padding: 0;

    li {
      color: rgba(255,255,255,0.5);
      cursor: pointer;
    }

    li:hover {
      color: rgba(255,255,255,0.75);
    }

    li.selected { color: white; }
  }

}

#palette {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 256px;
}

#anchor {
  box-sizing: border-box;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height*4;
  position: absolute;
}

#spectrum {
  display: -webkit-flex;
  display: flex;

  position: absolute;
  width: 100%;
}

#spectrum .spec {
  box-sizing: border-box;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height*4;
  position: absolute;

  webkit-box-flex: 1;
  -webkit-flex-grow: 1;
  -ms-flex-positive: 1;
  flex-grow: 1;
  -webkit-flex-basis: 0;
  -ms-flex-preferred-size: 0;
  flex-basis: 0;
}
