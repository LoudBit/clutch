input {
  width: auto;
}

form,
input[type="text"],
input[type="range"]  {
  width: 100%;
}

.form-input {
  padding: (copy-line-height/4) (copy-line-height/2);
}

input[type='range'] {
    -webkit-appearance: none !important;
    background:red;
    height:7px;
}
input[type='range']::-webkit-slider-thumb {
    -webkit-appearance: none !important;
    background:blue;
    height:10px;
    width:10px;
}
