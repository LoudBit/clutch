input {
  width: auto;
}

form,
input[type="number"],
input[type="range"],
input[type="text"],
textarea {
  width: 100%;
}

.form-input {
  padding: (copy-line-height/4) (copy-line-height/2);
}

input[type="number"],
input[type="text"],
textarea {
  border-radius: 2px;
  background: rgba(42,42,42, 0.25);
  border: 1px solid transparent;
  color: rgba(255, 255, 255, 0.8);
  box-shadow: 0 1px 1px rgba(255, 255, 255, 0.05), inset 0 1px 1px rgba(0, 0, 0, 0.1);
}

input[type="number"]:focus,
input[type="text"]:focus {
  background: #2a2a2a;
  outline: none;
  border: 1px solid rgba(255, 255, 255, 0.25);
}

input[type='range'] {
  outline: none;
  -webkit-appearance: none !important;
  background: #303030;
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.0) 100%);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.25), 0 1px 1px rgba(255, 255, 255, 0.05);
  border-radius: copy-font-size;
  height: (copy-font-size/2);
  margin-top: (copy-line-height/4);
}

input[type='range']::-webkit-slider-thumb {
  -webkit-appearance: none !important;
  background: #5e5e5e;
  height: copy-font-size;
  width: copy-font-size;
  border-radius: copy-line-height;
  background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0) 100%);
  box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.1), 0 1px 2px rgba(0, 0, 0, 0.2);
}

input[type='range']:focus,
input[type='range']::-moz-focus-inner {
  outline: none;
}

// Text Areas
textarea { min-height: (copy-line-height*4 - (copy-line-height/4)); }
textarea.dim { color: #5e5e5e; }
