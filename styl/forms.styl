label {
  color: rgba(255, 255, 255, 0.25);
  font-size: 11px;
  text-transform: uppercase;
}

// -----

form,
input[type="number"],
input[type="range"],
textarea {
  width: 100%;
}

.form-input {
  margin: (copy-line-height/4) (copy-line-height/2);
}

.form-input.shaded {
  background: rgba(0, 0, 0, 0.2);
  padding: (copy-line-height/4) (copy-line-height/4);
}

input[type="number"],
input[type="text"],
textarea {
  background: rgba(0, 0, 0, 0.2);
  border: none;
  color: rgba(255, 255, 255, 0.4);
  box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.5);
  line-height: input-line-height;
  font-weight: 100;
  width: 100%;
}

input[type="number"]:focus,
input[type="text"]:focus {
  outline: none;
}

input[type='range'] {
  outline: none;
  -webkit-appearance: none !important;
  background: rgba(0, 0, 0, 0.25);
  background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.15) 0%, rgba(0, 0, 0, 0.0) 100%);
  // box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.25), 0 1px 1px rgba(255, 255, 255, 0.05);
  border-radius: copy-font-size;
  height: copy-font-size;
  margin-top: (copy-line-height/4);
}

input[type='range']::-webkit-slider-thumb {
  -webkit-appearance: none !important;
  // background: #5e5e5e;
  height: copy-line-height;
  width: copy-line-height;
  border-radius: copy-line-height;
  // background-image: linear-gradient(to bottom, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0) 100%);
  box-shadow: inset 0 1px 1px rgba(255, 255, 255, 0.1), 0 1px 2px rgba(0, 0, 0, 0.2);
  border-top: 1px solid white;
  border-bottom: 1px solid white;
}

input[type='range']:focus,
input[type='range']::-moz-focus-inner {
  outline: none;
}


// Selects
select {
  background-color: rgba(0,0,0,0.2);
  box-shadow: 0 1px 1px rgba(0,0,0,0.5);

  border: 0px solid #262626;
  border-radius: 1px;

  line-height: heading-line-height;
  width: 100%;
  padding: 0 base*2;

  color: #5e5e5e;
  font-size: copy-font-size;
  font-weight: 500;
  text-align: center;
  text-shadow: 0 -1px 1px #1b1b1b;

  -webkit-appearance: none;
}

select:hover {
  color: rgba(255,255,255,0.5);
}


// Text Areas
textarea {
  min-height: (copy-line-height*6);
  font-size: small-font-size;
}
textarea.dim { color: #5e5e5e; }
